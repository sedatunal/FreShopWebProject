@model List<ProductViewModel>

<div class="row">
   
    @if (Model.Any())
    {

        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-3">

                <div class="card">
                    <div class="card-header">

                        @if (product.ImagePath == null)
                        {
                            <img class="mx-auto d-block" style="width:200px;height:200px" src="~/images/noImage.png" />
                        }
                        else
                        {
                            <img class="mx-auto d-block" style="width:200px;height:200px" src="~/images/products/@product.ImagePath" />
                        }
                    </div>
                    <div class="card-body">
                        <p class="card-text fw-bold">@product.Name</p>
                        <p class="card-text fw-bold" style="color:red">@product.UnitPrice TL</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex">

                                <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i> İncele</a>
                                <a asp-controller="Basket" asp-action="Add" asp-route-id="@product.Id" onclick="myFunction()" class="btn btn-sm btn-warning text-black ms-2"><i class="bi bi-cart"></i> Sepete Ekle</a>
                            </div>

                        </div>
                    </div>

                </div>
             


            </div>


        }


    }

    else
    {
        <div class="alert alert-danger">
            Ürün Yok
        </div>
    }

</div>


<script>
function myFunction() {
  alert("Ürün Sepete Eklendi!");
}
</script>